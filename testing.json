{
  "type": "e2e",
  "homophones": {
    "is": ["as", "does", "it's"],
    "two": ["to", "2"],
    "contestant": ["contested"]
  },
  "trace": false,
  "jest": {
    "reporters": [
        "default",
        [
          "./node_modules/jest-html-reporter",
          {
             "includeFailureMsg": true,
        	   "pageTitle": "Bespoken Test Report"
          }
        ]
      ],
    "silent": false,
    "testMatch": ["**/test/*.yml", "**/tests/*.yml", "**/*.e2e.yml", "**/*.spec.yml"]
},
  "virtualDeviceToken": {
    "alexa": {
      "en-US": "<Get token at apps.bespoken.io>"
      }
    }
}